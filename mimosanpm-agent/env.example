# Endpoint completo hacia Mimosa
MIMOSA_API_URL=http://mimosa:8000/api/plugins/mimosanpm/ingest
# Secreto compartido configurado en Mimosa (/admin)
MIMOSA_SHARED_SECRET=cambia-este-secreto

# Ruta de logs de NPM (usa el volumen real de tu despliegue)
NPM_LOG_GLOB=/data/logs/*_access.log

# Lista separada por comas de hosts leg√≠timos (se ignoran)
KNOWN_DOMAINS=example.com,www.example.com

# Paths sospechosos (lista separada por comas)
SUSPICIOUS_PATHS=/wp-admin,/wp-login.php,/xmlrpc.php,/.env,/.git,/phpmyadmin,/admin,/login

# Ajustes de sondeo
POLL_INTERVAL=5
BATCH_SIZE=50
STATE_PATH=/state/mimosanpm-agent.json
