# Entorno mínimo para Mimosa (núcleo)
MIMOSA_ENV=development

# Conexión al firewall pfSense/OPNsense
PFSENSE_BASE_URL=https://firewall.local
PFSENSE_API_KEY=pon_aqui_tu_api_key
PFSENSE_API_SECRET=pon_aqui_tu_api_secret
PFSENSE_ALIAS_NAME=mimosa_blocklist
VERIFY_FIREWALL_SSL=true
REQUEST_TIMEOUT=10

# Configuración inicial opcional del firewall para la UI web
# Si INITIAL_FIREWALL_NAME está presente, la aplicación creará una configuración
# inicial en data/firewalls.json al arrancar. Los campos que no especifiques
# usan los valores por defecto indicados a continuación.
INITIAL_FIREWALL_NAME=
INITIAL_FIREWALL_TYPE=pfsense
INITIAL_FIREWALL_BASE_URL=
INITIAL_FIREWALL_API_KEY=
INITIAL_FIREWALL_API_SECRET=
INITIAL_FIREWALL_ALIAS_NAME=
INITIAL_FIREWALL_VERIFY_SSL=true
INITIAL_FIREWALL_TIMEOUT=5
INITIAL_FIREWALL_APPLY_CHANGES=true

# Ruta de la base de datos local de ofensas (SQLite)
MIMOSA_DB_PATH=data/mimosa.db
