# Entorno mínimo para Mimosa (núcleo)
MIMOSA_ENV=development

# Configuración inicial opcional del firewall para la UI web
# Si INITIAL_FIREWALL_NAME está presente, la aplicación creará una configuración
# inicial en data/firewalls.json al arrancar. Los campos que no especifiques
# usan los valores por defecto indicados a continuación.
INITIAL_FIREWALL_NAME=
INITIAL_FIREWALL_TYPE=opnsense
# Valores válidos: opnsense | pfsense
INITIAL_FIREWALL_BASE_URL=
INITIAL_FIREWALL_API_KEY=
INITIAL_FIREWALL_API_SECRET=
INITIAL_FIREWALL_VERIFY_SSL=true
INITIAL_FIREWALL_TIMEOUT=15
INITIAL_FIREWALL_APPLY_CHANGES=true

# Ruta de la base de datos local de ofensas (SQLite)
MIMOSA_DB_PATH=data/mimosa.db
TZ=Europe/Madrid

# GeoIP (opcional, deshabilitado por defecto)
MIMOSA_GEOIP_ENABLED=false
MIMOSA_GEOIP_PROVIDER=ip-api
MIMOSA_GEOIP_ENDPOINT=http://ip-api.com/json

# IP del servidor Mimosa (opcional, crea alias mimosa_host en el firewall)
MIMOSA_IP=

# Autenticación UI
MIMOSA_SESSION_SECRET=change-me
MIMOSA_SESSION_MAX_AGE=28800
MIMOSA_PASSWORD_PEPPER=change-me

# Bot de Telegram (opcional)
# Si TELEGRAM_BOT_TOKEN está presente, el bot se habilitará automáticamente
# al arrancar la aplicación. Puedes obtener el token desde @BotFather en Telegram.
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_ENABLED=false
TELEGRAM_WELCOME_MESSAGE=Bienvenido al bot de Mimosa
TELEGRAM_UNAUTHORIZED_MESSAGE=No estás autorizado para usar este bot
